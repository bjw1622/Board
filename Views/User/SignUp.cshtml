@{
    ViewBag.Title = "Sign Up";
}

<h2>회원 가입</h2>
<form class="form-horizontal" action="/User/SignUp" method="post">
    <div class="form-group">
        <label>사용자 Email</label>
        <input type="email" class="form-control" name="Email" placeholder="사용자 Email 입력" id="email" required />
        <button class="btn btn-info" id="check_email" type="button">이메일 중복 체크</button>
    </div>

    <div class="form-group">
        <label>사용자 PW</label>
        <input type="password" class="form-control" name="Pw" placeholder="사용자 PW 입력" required />
    </div>

    <div class="form-group">
        <label>사용자 Name</label>
        <input type="text" class="form-control" name="Name" placeholder="사용자 이름 입력" required />
    </div>

    <div class="form-group">
        <label>사용자 Bith</label>
        <input type="number" class="form-control" name="Birth" placeholder="사용자 Birth 입력" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">회원가입</button>
        <a class="btn btn-warning" href="#">content</a>
    </div>
</form>

<script>
    document.querySelector("#check_email").addEventListener('click', () => {
        const email = {
            "Email": $("#email").val(),
        }
        $.ajax({
            url: '/User/EmailCheck',
            type: 'post',   
            dataType: "json",
            data: JSON.stringify(email),
            contentType: "application/json",
            success: function (data) {
            },
            error: function (err) {
            }
        });
                })
</script>